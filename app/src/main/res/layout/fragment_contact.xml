<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.ContactFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:fillViewport="true"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:id="@+id/image_container"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="200sp">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/back"
                            android:scaleType="centerCrop"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#92313131"
                            />
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="120sp"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/autour_one"
                                android:text="@string/subhadra"
                                android:textColor="#ffffff"
                                android:textSize="27sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/amita_bold"
                                android:text="@string/jewellers"
                                android:textColor="#ffffff"
                                android:layout_marginLeft="5sp"
                                android:textSize="28sp" />
                        </LinearLayout>
                    </RelativeLayout>
                </android.support.v7.widget.CardView>
                <android.support.design.widget.FloatingActionButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20sp"
                    android:src="@drawable/ic_map_black_24dp"
                    android:layout_marginTop="180sp"
                    android:onClick="map"
                    android:layout_marginBottom="20dp"
                    android:elevation="@dimen/cardview_default_elevation"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_below="@id/image_container"
                    android:layout_marginTop="20sp"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_margin="10sp"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="40sp"
                            android:layout_height="40sp"
                            android:layout_margin="10sp"
                            android:src="@drawable/location_vect"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/autour_one"
                            android:text="@string/address"
                            android:textColor="#000000"
                            android:paddingBottom="5sp"
                            android:layout_gravity="center"
                            android:layout_marginTop="10sp"
                            android:textSize="16dp" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_margin="10sp"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="40sp"
                            android:layout_height="40sp"
                            android:layout_margin="10sp"
                            android:src="@drawable/opens_vect"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/autour_one"
                            android:text="@string/ope"
                            android:textColor="#000000"
                            android:layout_gravity="center"
                            android:layout_marginTop="10sp"
                            android:paddingBottom="5sp"
                            android:textSize="16dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/autour_one"
                            android:text="Modes Of Contact"
                            android:layout_marginRight="5sp"
                            android:layout_marginLeft="5sp"
                            android:textColor="#000000"
                            android:layout_marginBottom="3dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="20sp"
                            android:textSize="23dp" />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="#939393"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginTop="15dp">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginRight="20dp">
                            <ImageButton
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:id="@+id/contact_call"
                                android:scaleType="fitCenter"
                                android:layout_marginLeft="10sp"
                                android:layout_marginRight="10sp"
                                android:padding="15sp"
                                android:src="@drawable/vector_call_now"
                                android:background="@drawable/social_btn_shape"
                                android:elevation="4dp"
                                android:clickable="true"
                                android:onClick="call"
                                />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Call us"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:fontFamily="@font/amita_bold"
                                android:layout_margin="5sp"
                                android:textAlignment="center"
                                android:textColor="@color/colorAccent"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginRight="20dp">
                            <ImageButton
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_marginLeft="10sp"
                                android:layout_marginRight="10sp"
                                android:id="@+id/contact_mail"
                                android:scaleType="fitCenter"
                                android:padding="15sp"
                                android:src="@drawable/vector_mail"
                                android:background="@drawable/social_btn_shape"
                                android:elevation="4dp"
                                android:clickable="true"
                                android:onClick="mail"
                                />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Mail Us"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:fontFamily="@font/amita_bold"
                                android:layout_margin="5sp"
                                android:textAlignment="center"
                                android:textColor="@color/colorAccent"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <ImageButton
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:id="@+id/contact_direction"
                                android:textAlignment="center"
                                android:layout_marginLeft="10sp"
                                android:layout_marginRight="10sp"
                                android:background="@drawable/social_btn_shape"
                                android:src="@drawable/whatsapp"
                                android:scaleType="fitCenter"
                                android:padding="15sp"
                                android:onClick="whatsApp"
                                android:elevation="4dp"
                                android:clickable="true"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Text Us"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:fontFamily="@font/amita_bold"
                                android:layout_margin="5sp"
                                android:textAlignment="center"
                                android:textColor="@color/colorAccent"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </ScrollView>
    </LinearLayout>
</FrameLayout>