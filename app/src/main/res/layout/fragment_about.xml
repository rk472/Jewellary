<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragments.AboutFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:fillViewport="true"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="200sp">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/back"
                            android:scaleType="centerCrop"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#92313131"
                            />
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="120sp"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/autour_one"
                                android:text="@string/subhadra"
                                android:textColor="#ffffff"
                                android:textSize="27sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/amita_bold"
                                android:text="@string/jewellers"
                                android:textColor="#ffffff"
                                android:layout_marginLeft="5sp"
                                android:textSize="28sp" />
                        </LinearLayout>
                    </RelativeLayout>
                </android.support.v7.widget.CardView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_marginTop="10sp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/autour_one"
                        android:text="@string/you_prefer"
                        android:textColor="#000000"
                        android:layout_marginLeft="50sp"
                        android:textSize="23sp"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/autour_one"
                        android:text="@string/we_design"
                        android:textColor="#000000"
                        android:layout_marginEnd="50sp"
                        android:layout_gravity="end"
                        android:textSize="23sp"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/autour_one"
                        android:textAlignment="center"
                        android:text="@string/moto"
                        android:layout_margin="15sp"
                        android:textSize="17sp"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/autour_one"
                        android:textAlignment="center"
                        android:text="Address"
                        android:textColor="#000000"
                        android:layout_gravity="center"
                        android:textSize="25dp"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/autour_one"
                        android:textAlignment="center"
                        android:layout_marginTop="10sp"
                        android:text="M/S - Subhadra Jewellers\nAt/Po - Indupur\nP/S - Nikirai\nDist - Kendrapara\nOdisha"
                        android:layout_gravity="center"
                        android:textSize="18dp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>